extends ../../../templates/Reports/Reportmaster

block content
    div.ui.centerer
        div.ui.segment.ping.p-adjust
            div
            div.ui.ribbon.label.inverted.huge.orange.adjustleft
                label.ui Function Attendance
            div.ui.huge.adjustleft.orange.label
                label.ui Faculty
            div.ui.two.fields.height7.pright
                form.ui.form(method="POST" action=`/functions/func/Attendance/${profs.strFacultyID}?_method=PUT`)
                    div.ui.three.fields
                        div.ui.field.simple.dropdown.item Faculty
                            i.dropdown.icon
                            div.ui.menu
                                div.header Faculty
                                each prof in profs
                                    a.ui.item(href=`/functions/func/Attendance/${prof.strFacultyID}`) #{prof.strFacultySurname+' '+prof.strFacultyFirstname}
                    if PASS != 1      
                            div.ui.field
                                label.ui Functions
                                select#select.search.selection.dropdown(name="attend")
                                    each attend in attends
                                        option(value=attend.strFunctionsID) #{attend.strFunctionsName}
                            div.ui.field.height2.pright
                                button#add.ui.labeled.orange.icon.button.width5.height3(type="Submit")
                                    i.add.icon
                                    p Submit
            script.
                $('#select','').dropdown();
                $('#multi-select')
                    .dropdown()
                ;
                $('#multi-selects')
                    .dropdown()
                ;
                $('.menu .item')
                    .tab()
                ;