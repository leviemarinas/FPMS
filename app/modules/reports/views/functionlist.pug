extends ../../../templates/Reports/Reportmaster

block content
    div.ui.centerer
            div.ui.segment.ping.p-adjust
                div.ui.ribbon.label.inverted.huge.violet
                    label.ui Functions
                div.adjustright
                    div.ui.huge.right.ribbon.label.violet.adjustright          
                            label.ui Faculty List
                div.ui.simple.dropdown.item Faculty
                    i.dropdown.icon
                    div.ui.menu
                        div.header Choose Faculty
                        each prof in profs
                            a.ui.item(href=`/functions/${prof.strFacultyID}`) #{prof.strFacultySurname + ',' + prof.strFacultyFirstname}
                .height4
                    table.ui.compact.celled.large.violet.table 
                        th
                            tr
                                th.four.wide.tp Functions
                                th.five.wide Functions Level
                                th.four.wide Functions Date
                                th.three.wide Attendance
                        th
                            each func in funcs                        
                                tr
                                    td.tp.t-align= func.strFuncRefName 
                                    td=func.strFunctLevelName
                                    td.t-align=func.datFunctionDate
                                    td
                                        .ui.read-only.checkbox
                                            if func.bitIsPresent != 0    
                                                input(type="checkbox" checked tabindex="0" class="hidden")
                                                label
                                            else
                                                input(type="checkbox" tabindex="0" class="hidden")
                                                label